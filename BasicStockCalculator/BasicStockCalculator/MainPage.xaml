<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BasicStockCalculator"
             x:Class="BasicStockCalculator.MainPage"
             Title="Basic Stock Calculator">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Settings"
                     Order="Primary"
                     Icon="ic_settings_white_24dp.png"
                     Text="Settings"
                     Priority="0"
                     Clicked="OnSettingsClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter stock amount"
                       Keyboard="Numeric"
                       TextChanged="OnValueChanged"/>
            <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
                <ListView x:Name="PercentageListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell Height="10">
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Percentage}"
                                           BackgroundColor="{Binding BgColorPercentage}"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding Positive}"
                                           BackgroundColor="{Binding BgColorPositive}"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding Negative}"
                                           BackgroundColor="{Binding BgColorNegative}"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalTextAlignment="Center"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>